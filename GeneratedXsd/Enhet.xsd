<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:include schemaLocation="Adresse.xsd"/>
	<xs:include schemaLocation="Aktor.xsd"/>
	<xs:element name="Enhet" type="Enhet"/>
	<xs:complexType name="Enhet" abstract="true">
		<xs:annotation>
			<xs:documentation>Alle hovedenheter, underenheter og organisasjonsledd som er identifisert med et organisasjonsnummer

Merknad: Forslag til definisjon med utgangspunkt i Enhetsregisteret</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="Aktør">
				<xs:sequence>
					<xs:element name="navn" type="xs:string" minOccurs="0" maxOccurs="1">
						<xs:annotation>
							<xs:documentation>Navn på enhet som er registrert i Enhetsregisteret</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="næringskode" type="xs:string" minOccurs="0" maxOccurs="unbounded">
						<xs:annotation>
							<xs:documentation>Femsifret kode som tildeles på bakgrunn av enhetens virksomhet/bransje. Bygger på EU sin næringsstandard (NACE) som består av fire siffer. Det femte sifferet er nasjonalt nivå</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="organisasjonsform" type="xs:string" minOccurs="0" maxOccurs="1">
						<xs:annotation>
							<xs:documentation>Inndeling av enheter ut fra hvordan disse er organisert (eierform, ansvarsforhold, regelverk og lignende)</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="organisasjonsnummer" type="xs:string" minOccurs="0" maxOccurs="1">
						<xs:annotation>
							<xs:documentation>Nisifret nummer som entydig identifiserer enheter i Enhetsregisteret</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="adresse" type="GeografiskAdresse" minOccurs="0" maxOccurs="1"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
</xs:schema>
